<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
    <div class="login-container">
      <% if (user) { %>
        <div>
          <form method="POST" action="/logout">
          <label>Logged in as: <%= user.email %></label>
          <button style="margin-left: 10px" class="btn btn-outline-light" type="submit">Logout</button>
        </form>
        </div>
        <% } else { %>
          <div class="form-inline">
          <form method="GET" action="/login">
            <button class="btn btn-outline-light" type="submit">Login</button>
          </form>
          <form method="GET" action="/register">
            <button style="margin-left: 10px" class="btn btn-outline-light" type="submit">Register</button>
          </form>
        <% } %>
    </div>
  </nav>
</header>